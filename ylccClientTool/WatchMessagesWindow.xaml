<Window x:Class="ylccClientTool.WatchMessagesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ylccClientTool"
        mc:Ignorable="d"
        Closing="WindowClosing"
        Title="WatchMessagesWindow" Height="440" Width="440">
    <Grid>
        <MediaElement x:Name="WatchMessagesMediaElement" Volume="1" Width="400" Height="400"></MediaElement>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="AuthorLabel"  Content="" HorizontalAlignment="Center"></Label>
            <Label x:Name="MessageLabel" Content="" HorizontalAlignment="Center"></Label>
        </StackPanel>
    </Grid>
</Window>
