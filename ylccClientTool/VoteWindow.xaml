<Window x:Class="ylccClientTool.VoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ylccClientTool"
        mc:Ignorable="d"
        Title="VoteWindow" Width="600" Height="500">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Grid x:Name="MainGrid"  Width="600" Height="400" >
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="time extension" Margin="10" Foreground="GhostWhite" Click="UpdateDurationClick" Width="100">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Name="ButtonBorder" BorderThickness="4" CornerRadius="10">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                <Border.Style>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="BorderBrush" Value="LightGray" />
                                        <Setter Property="Background" Value="DimGray" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPressed, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="True">
                                                <Setter Property="BorderBrush" Value="WhiteSmoke"/>
                                                <Setter Property="Background" Value="DarkGray"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="get result" Margin="10" Foreground="GhostWhite" Click="GetResultClick" Width="100">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Name="ButtonBorder" BorderThickness="4" CornerRadius="10">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                <Border.Style>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="BorderBrush" Value="LightGray" />
                                        <Setter Property="Background" Value="DimGray" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPressed, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="True">
                                                <Setter Property="BorderBrush" Value="WhiteSmoke"/>
                                                <Setter Property="Background" Value="DarkGray"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="left time" Margin="5" />
                <Label x:Name="CountDownLabel" Content="{Binding CountDown}" Width="100" Margin="5"/>
                <Label Content="second" Margin="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
