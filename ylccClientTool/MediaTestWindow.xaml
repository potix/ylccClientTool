<Window x:Class="ylccClientTool.MediaTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ylccClientTool"
        mc:Ignorable="d"
        Icon="YCT.png"
        Title="MediaTestWindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="223*"/>
        </Grid.ColumnDefinitions>
        <MediaElement x:Name="TestMediaElement" Volume="1" Width="200" Height="200" Grid.ColumnSpan="2" Margin="50,42,50,42" />
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="68,0,0,0">
            <Label x:Name="AuthorLabel" HorizontalAlignment="Center"></Label>
            <Label x:Name="MessageLabel" HorizontalAlignment="Center"></Label>
        </StackPanel>
    </Grid>
</Window>
